@page
@model IndexModel
@{
    ViewData["Title"] = "Profiel gegevens";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col">
        <h4>@ViewData["Title"]:</h4>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>:
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-row">
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.FirstName"></label>:<span class="required"> *</span>
                        <input asp-for="Input.FirstName" class="form-control" placeholder="Voornaam" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-5 col-md-3">
                    <div class="form-group">
                        <label asp-for="Input.Infix"></label>:
                        <input asp-for="Input.Infix" class="form-control" placeholder="Tussenvoegsel" />
                        <span asp-validation-for="Input.Infix" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-7 col-md-5">
                    <div class="form-group">
                        <label asp-for="Input.LastName"></label>:<span class="required"> *</span>
                        <input asp-for="Input.LastName" class="form-control" placeholder="Achternaam" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-12 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Input.BirthDate"></label>:<span class="required"> *</span>
                        <input asp-for="Input.BirthDate" class="form-control" />
                        <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>:
                        <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Telefoonnummer" />
                        <small class="d-block pt-1">Bijvoorbeeld 0612345678 of 0701234567.</small>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                 <div class="col-12 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Input.Subject"></label>:
                        <input asp-for="Input.Subject" class="form-control" placeholder="Subject" disabled/>
                        <span asp-validation-for="Input.Subject" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <h4>Adres gegevens:</h4>
            <div class="form-row">
                <div class="col-12 col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Street"></label>:<span class="required"> *</span>
                        <input asp-for="Input.Street" class="form-control" placeholder="Straat" />
                        <span asp-validation-for="Input.Street" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 col-md-4">
                    <div class="form-group">
                        <label asp-for="Input.HouseNumber"></label>:<span class="required"> *</span>
                        <input asp-for="Input.HouseNumber" class="form-control" placeholder="Huisnummer" />
                        <span asp-validation-for="Input.HouseNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6 col-md-2">
                    <div class="form-group">
                        <label asp-for="Input.Addition"></label>:
                        <input asp-for="Input.Addition" class="form-control" placeholder="Toevoeging" />
                        <span asp-validation-for="Input.Addition" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Input.ZipCode"></label>:<span class="required"> *</span>
                        <input asp-for="Input.ZipCode" class="form-control" placeholder="Postcode" />
                        <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Input.City"></label>:<span class="required"> *</span>
                        <input asp-for="Input.City" class="form-control" placeholder="Woonplaats" />
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                        
                    </div>
                </div>
            </div>
            <div class="form-group text-center">
                <button id="update-profile-button" type="submit" class="btn btn-primary lg-btn">Opslaan</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
