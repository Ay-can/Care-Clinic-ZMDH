@page
@model LoginModel
@{
    ViewData["Title"] = "Inloggen";
}

<div class="container page">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col">
            <section>
                <form id="account" method="post">
                    <h4>Gebruik uw ZMDH account om in te loggen</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>:<span class="required"> *</span>
                        <input asp-for="Input.Email" class="form-control" placeholder="E-mailadres" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>:<span class="required"> *</span>
                        <div class="input-group">
                            <input asp-for="Input.Password" class="form-control input-password" placeholder="Wachtwoord" />
                            <div class="input-group-append">
                                <div class="input-group-text"><span class="material-icons-round toggle-password">visibility_off</div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-6">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="col-6 text-right">
                                <a id="forgot-password" asp-page="./ForgotPassword">Wachtwoord vergeten?</a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary lg-btn">Inloggen</button>
                    </div>
                    <div class="form-group pt-3">
                        <div class="row">
                            <div class="col">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registreer als een nieuwe ZMDH gebruiker.</a>
                            </div>
                            <div class="col text-right">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Opnieuw email verificatie versturen.</a>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
