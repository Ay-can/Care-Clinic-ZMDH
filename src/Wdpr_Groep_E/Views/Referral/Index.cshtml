 @model IEnumerable<ReferralOverview>
@{
    ViewData["Title"] = "Dossier Overzicht";
    var key = ViewData["key"];
}

<div class="container-fluid manage pt-3 pb-3">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            <table class="table table-sm table-striped table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Bsn</th>
                        <th>Geboortedatum</th>
                        <th>Informatie</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var client in Model)
                    {
                        <tr>
                            <td>@client.bsn</td>
                            <td>@client.dt</td>
                            <form method="post" asp-action="IndividualReferral" asp-controller="Referral">
                                <td class="text-center"><button class="btn btn-sm btn-primary">Informatie</button></td>
                                <input type="hidden" name="Bsn" value="@client.bsn"></input>
                                <input type="hidden" name="birthDate" value="@client.dt"></input>
                            </form>
                        </tr>
                    }  

                </tbody>
            </table>
        </div>
    </div>
</div>

